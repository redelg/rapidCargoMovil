<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewImagen"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/box" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_descripcionOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Descripcion Encomienda"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_Remitente"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="Nombre Remitente"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_codSeguimiento"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="Codigo Seguimiento"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>